{
	"name": "blog-template",
	"type": "module",
	"version": "1.1.0",
	"description": "A template for creating a blog with Astro",
	"author": "danielcgilibert",
	"license": "GPL-3.0-only",
	"repository": {
		"type": "git",
		"url": "https://github.com/danielcgilibert/blog-template"
	},
	"keywords": [
		"astro",
		"astrojs",
		"astro-template",
		"astro-blog",
		"astro-b"
	],
	"bugs": {
		"url": "https://github.com/danielcgilibert/blog-template/issues"
	},
	"scripts": {
		"dev": "npx tinacms dev -c \"astro dev\"",
		"start": "node sync-mdx.cjs && astro dev  --host",
		"build": "node sync-mdx.cjs && astro build",
		"sync": "astro sync",
		"preview": "astro preview",
		"postbuild": "pagefind --site dist",
		"format:check": "prettier --plugin-search-dir=. --check .",
		"format": "prettier --plugin-search-dir=. --write .",
		"lint": "eslint .",
		"pre-commit": "lint-staged",
		"prepare": "husky install"
	},
	"dependencies": {
		"@astrojs/partytown": "^2.1.4",
		"@astrojs/rss": "4.0.11",
		"astro": "5.5.4",
		"astro-font": "^1.0.0",
		"sharp": "^0.33.5"
	},
	"devDependencies": {
		"@astrojs/mdx": "4.0.8",
		"@astrojs/sitemap": "3.2.1",
		"@astrojs/tailwind": "6.0.0",
		"@pagefind/default-ui": "^1.3.0",
		"@tailwindcss/typography": "0.5.10",
		"@typescript-eslint/parser": "^8.26.1",
		"clsx": "2.1.1",
		"eslint": "^8.56.0",
		"eslint-plugin-astro": "^0.31.0",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"husky": "^9.1.7",
		"lint-staged": "^15.2.0",
		"mdast-util-to-string": "^4.0.0",
		"motion": "^10.16.4",
		"pagefind": "^1.3.0",
		"prettier": "^3.0.3",
		"prettier-config-standard": "^7.0.0",
		"prettier-plugin-astro": "^0.14.1",
		"reading-time": "^1.5.0",
		"slugify": "^1.6.6",
		"tailwind-merge": "3.0.2",
		"tailwindcss": "3.3.5",
		"typescript": "^5.7.3"
	},
	"lint-staged": {
		"*.{astro,js,jsx,ts,tsx,md,mdx,json}": [
			"prettier --write --plugin-search-dir=."
		]
	}
}
