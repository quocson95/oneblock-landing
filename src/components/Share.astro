---
import { siteConfig } from '@/data/site.config'
import FacebookIconColor from './icons/FacebookIconColor.astro'
import TelegramIconColor from './icons/TelegramIconColor.astro'

import LinkedinIcon from './icons/linkedinIcon.astro'
const message = siteConfig.shareMessage

const URL = Astro.url.href
---

<div class='flex flex-col gap-2'>
	<span class='mb-1 font-bold text-2xl'>Chia sẻ</span>
	<ul class='flex gap-3 text-black dark:text-white'>
		<li>
			<a
				target='_blank'
				href={`https://www.facebook.com/sharer/sharer.php?u=${URL}`}
				aria-label='Chia sẻ Facebook'><FacebookIconColor size(32,32) /></a
			>
		</li>
		<li>
			<a
				target='_blank'
				href={`https://t.me/share/url?url=${URL}&text=${message}`}
				aria-label='Share on Telegram'
			>
				<TelegramIconColor /></a
			>
		</li>
	</ul>
</div>
